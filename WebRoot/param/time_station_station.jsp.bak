<%@ page contentType="text/html; charset=gb2312" language="java" import="java.sql.*" errorPage="errorpage.jsp" %>
<%@page import="com.bo.jsp.ReadLine"%>
<jsp:useBean id="connora" scope="page" class="com.bo.jdbc.connection.OraConn"/>
<jsp:useBean id="time" scope="page" class="com.bo.util.DateDemo"/>
<jsp:include page="check_time.html" flush="true" />
<script>
function se()
{
	if(null!="<%=request.getParameter("in_out_station_id")%>")
	{
		for(var n = 0; n < window.form1.in_out_station_id.options.length; n++)
		{
			if(window.form1.in_out_station_id.options[n].value=="<%=(String)request.getParameter("in_out_station_id")%>")
		  {
		    window.form1.in_out_station_id.options[n].selected = true;
		  }
		}
	}
	
	if(null!="<%=request.getParameter("out_in_station_id")%>")
	{
		for(var n = 0; n < window.form1.out_in_station_id.options.length; n++)
		{
			if(window.form1.out_in_station_id.options[n].value=="<%=(String)request.getParameter("out_in_station_id")%>")
		  {
		    window.form1.out_in_station_id.options[n].selected = true;
		  }
		}
	}
}
</script>
<html>
<jsp:include page="time.txt" flush="true" />
<body onload="se();">
